!setup.pl -d=3

 &components
 gravity           = .true.
/

 &filelist
   base_filename      = 'output/rthd_3d'
   autoconvert      = .true.
   convert_type     = 'vtuBCCmpi'
   saveprim         = .true.
 /

 &savelist
   dtsave_dat       = 1.d-1
/

 &stoplist
   it_max              = 100
   time_max            = 2.d0
/

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme       = 20*'tvdlf'
   limiter    = 20*'vanleer'
/

 &boundlist
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 5*'periodic'
  typeboundary_max2 = 5*'periodic'
  typeboundary_min3 = 'symm','symm','symm','asymm','symm'
  typeboundary_max3 = 'symm','symm','symm','asymm','symm'
/
 &meshlist
   refine_max_level          = 1
   max_blocks         = 4096
   block_nx1        = 16
   block_nx2        = 16
   block_nx3        = 16
   domain_nx1         = 256
   domain_nx2         = 256 
   domain_nx3         = 256 
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

