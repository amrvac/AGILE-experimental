 &filelist
    base_filename='output/quad3df'
    autoconvert = F
    saveprim=T
    convert_type='vtuBCCmpi'
 /

 &savelist
    itsave(1,1)=0
    itsave(1,2)=0
    dtsave_log=0.01
    dtsave_dat=1.d0
 /
    itsave(1,1)=0
    itsave(1,2)=0
    dtsave_log=0.1d0

 &stoplist
    time_max=500.d0
    dtmin=1.d-7
 /

 &methodlist
    time_stepper='threestep'
    flux_scheme=20*'tvdlf'
    limiter=20*'vanleer'
    phys='ffhd'
 /

 &boundlist
    specialboundary=T
    typeboundary_min1 = 4*'cont'
    typeboundary_max1 = 4*'cont'
    typeboundary_min2 = 4*'cont'
    typeboundary_max2 = 4*'cont'
    typeboundary_min3 = 4*'special'
    typeboundary_max3 = 4*'cont'
 /

 &meshlist
    max_blocks=25000
    block_nx1=16
    block_nx2=16
    block_nx3=16
    domain_nx1=640
    domain_nx2=256
    domain_nx3=512
    xprobmin1=-5.d0
    xprobmax1=5.d0
    xprobmin2=-2.d0
    xprobmax2=2.d0
    xprobmin3=0.d0
    xprobmax3=4.d0
 /

 &paramlist
    typecourant='maxsum'
    courantpar=0.6d0
    slowsteps=10
 /

 &ffhd_list
    ffhd_pdivb=T
    ffhd_hyperbolic_thermal_conduction=T
    ffhd_radiative_cooling=T
    ffhd_gravity=T
    ffhd_source_usr=T
 /

 &rc_list
    ncool=4000
    coolcurve='Colgan_DM'
    coolmethod='exact'
    Tfix=.true.
    tlow=0.008d0
    rad_cut=T
    rad_cut_hgt=0.3
 /

 &rh_list
    vlim1=2000
    vlim2=1000
    vlim3=1000
    trelax=90.d0
    tramp=10.d0
    periods=300.d0
    variation=75.d0
    ntimes=50
    nwaves=1000
 /

 &usr_list
    B0=5.d0
    kx=0.31415926d0
    y0=0.4d0
    lQ0=1.d-1
    bQ0=1.d-4
 /
