!setup.pl -d=2

&filelist
  base_filename    = 'tc_ring_ffhda'
  autoconvert      = .true.
  convert_type     = 'vtuBCCmpi'
  saveprim         = .true.
/

 &savelist
   itsave(1,1) = 0
   itsave(1,2) = 0
   dtsave_log = 1.d-3
   dtsave_dat = 1.d-2
/

 &stoplist
   time_max = 1.d-1
/

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme       = 20*'tvdlf'
   limiter    = 20*'vanleer'
   phys       = 'ffhd'
/
 &boundlist
  typeboundary_min1 = 4*'cont'
  typeboundary_max1 = 4*'cont'
  typeboundary_min2 = 4*'cont'
  typeboundary_max2 = 4*'cont'
  typeboundary_min3 = 4*'periodic'
  typeboundary_max3 = 4*'periodic'
/
 &meshlist
   refine_max_level = 1
   block_nx1        = 16
   block_nx2        = 16
   block_nx3        = 16
   domain_nx1       = 64
   domain_nx2       = 64
   domain_nx3       = 64
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   xprobmin3       =-1.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
   courantpar=0.1d0
 /
 &ffhd_list
   ffhd_hyperbolic_thermal_conduction=T
 /
