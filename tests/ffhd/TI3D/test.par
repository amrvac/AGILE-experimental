 &filelist
   base_filename    = 'test'
   typefilelog      = 'regression_test'
   autoconvert      = F
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   dtsave_log       = 1e10
   dtsave_dat       = 1e10
 /

 &stoplist
   time_max=0.1d0
 /

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme      = 20*'tvdlf'
   limiter          = 20*'vanleer'
   phys             = 'ffhd'
/

 &boundlist
  typeboundary_min1 = 4*'periodic'
  typeboundary_max1 = 4*'periodic'
  typeboundary_min2 = 4*'periodic'
  typeboundary_max2 = 4*'periodic'
  typeboundary_min3 = 4*'periodic'
  typeboundary_max3 = 4*'periodic'
/

 &meshlist
   refine_max_level   = 1
   max_blocks         = 8
   block_nx1          = 16
   block_nx2          = 16
   block_nx3          = 16
   domain_nx1         = 32
   domain_nx2         = 32 
   domain_nx3         = 32 
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

 &rc_list
   ncool = 4000
   coolmethod = 'exact'
   coolcurve = 'Colgan_DM'
 /

 &ffhd_list
   ffhd_gravity = .false.
   ffhd_hyperbolic_thermal_conduction = .true.
   ffhd_radiative_cooling = .true.
   ffhd_source_usr = .false.
 /

 &usr_list
  scale = 0.1d0
  radius = 0.15d0
 /
