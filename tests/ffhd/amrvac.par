!setup.pl -d=3

 &components
 gravity           = .true.
 bfield           = .true.
/

 &filelist
   base_filename    = 'output/ffhd_3d'
   autoconvert      = .true.
   convert_type     = 'vtuBCCmpi'
   saveprim         = .true.
 /

   dtsave_dat       = 1.d-1
 &savelist
   itsave(1,1)      = 0
   itsave(1,2)      = 0
   ditsave_log      = 10
   dtsave_dat       =0.05d0
/

   it_max              = 100
 &stoplist
   time_max            = 2.d0
/

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme      = 20*'tvdlf'
   limiter          = 20*'vanleer'
   phys             = 'ffhd'
/

 &boundlist
  typeboundary_min1 = 4*'periodic'
  typeboundary_max1 = 4*'periodic'
  typeboundary_min2 = 4*'periodic'
  typeboundary_max2 = 4*'periodic'
  typeboundary_min3 = 'symm','asymm','symm','symm'
  typeboundary_max3 = 'symm','asymm','symm','symm'
/
   domain_nx1         = 256
   domain_nx2         = 256
   domain_nx3         = 256
 &meshlist
   refine_max_level          = 1
   max_blocks         = 4096
   block_nx1        = 16
   block_nx2        = 16
   block_nx3        = 16
   domain_nx1         = 64
   domain_nx2         = 64
   domain_nx3         = 64
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

