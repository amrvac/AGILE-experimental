 &components
   gravity = .true.
   bfield = .true.
   cooling = .true.
 /

 &filelist
   base_filename    = 'output/ffhd_3d'
   autoconvert      = T
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)      = 0
   itsave(1,2)      = 0
   ditsave_log      = 1
   ditsave_dat      = 10

 /

 &stoplist
   it_max           = 100
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   phys                = 'ffhd'
 /

 &boundlist
   typeboundary_min1 = 4*'periodic'
   typeboundary_max1 = 4*'periodic'
   typeboundary_min2 = 4*'periodic'
   typeboundary_max2 = 4*'periodic'
   typeboundary_min3 = 'symm','asymm','symm','asymm'
   typeboundary_max3 = 'symm','asymm','symm','asymm'
 /

 &meshlist
   max_blocks         = 4096
   refine_max_level   = 1
   block_nx1          = 16
   block_nx2          = 16
   block_nx3          = 16
   domain_nx1         = 128
   domain_nx2         = 128
   domain_nx3         = 128
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
   iprob=1
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.7d0
   typecourant      = 'maxsum'
 /

 &rc_list
   ncool = 4000
   coolmethod = 'exact'
   coolcurve = 'Colgan_DM'
 /
