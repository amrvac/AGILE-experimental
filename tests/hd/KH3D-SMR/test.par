 &filelist
   base_filename    = 'test'
   autoconvert      = F
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
   typefilelog      = 'regression_test'
 /

 &savelist
   dtsave_log       = 1e10
   dtsave_dat       = 1e10
 /

 &stoplist
   time_max        = 0.005d0
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   phys            = 'hd'
 /

 &boundlist
   typeboundary_min1 = 5*'periodic'
   typeboundary_max1 = 5*'periodic'
   typeboundary_min2 = 5*'periodic'
   typeboundary_max2 = 5*'periodic'
   typeboundary_min3 = 5*'periodic'
   typeboundary_max3 = 5*'periodic'
 /

 &meshlist
   max_blocks         = 4096
   refine_max_level   = 2
   refine_criterion   = 1 !user-defined criterion only (in mod_usr)
   itfixgrid          = 0 
   block_nx1          = 16
   block_nx2          = 16
   block_nx3          = 16
   domain_nx1         = 128
   domain_nx2         = 128
   domain_nx3         = 128
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
   iprob=1
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.7d0
 /
