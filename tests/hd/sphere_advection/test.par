 &filelist
   typefilelog      = 'regression_test'
   base_filename    = 'test'
 /

 &savelist
   dtsave_log       = 1e10
   dtsave_dat       = 1e10
 /

 &stoplist
   time_max         = 0.2d0
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   phys            = 'hd'
 /

 &boundlist
   typeboundary_min1 = 5*'periodic'
   typeboundary_max1 = 5*'periodic'
   typeboundary_min2 = 5*'periodic'
   typeboundary_max2 = 5*'periodic'
   typeboundary_min3 = 5*'periodic'
   typeboundary_max3 = 5*'periodic'
 /

 &meshlist
   max_blocks         =  1024
   refine_max_level   =  2
   refine_criterion   =  3 ! Lohner criterion
   refine_usr         =  .false.
   block_nx1          =  8
   block_nx2          =  8
   block_nx3          =  8
   domain_nx1         =  64
   domain_nx2         =  64
   domain_nx3         =  64
   xprobmin1          = -1.0d0
   xprobmax1          =  1.0d0
   xprobmin2          = -1.0d0
   xprobmax2          =  1.0d0
   xprobmin3          = -1.0d0
   xprobmax3          =  1.0d0
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.7d0
 /
