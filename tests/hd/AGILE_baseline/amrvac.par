 !$AMRVAC_DIR/setup.pl -d=2
 &filelist
   base_filename    = 'kh_2d'
   autoconvert      = T
   convert_type     = 'vtuBmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)      = 0
   itsave(1,2)      = 0
   ditsave_log      = 1
   ditsave_dat      = 1
 /

 &stoplist
   it_max = 10
 /

 &methodlist
   time_stepper = 'threestep'
   flux_scheme     = 20*'hll'
   limiter         = 20*'cada3'
 /

 &boundlist
   typeboundary_min1 = 4*'periodic'
   typeboundary_max1 = 4*'periodic'
   typeboundary_min2 = 4*'periodic'
   typeboundary_max2 = 4*'periodic'
 /

 &meshlist
   max_blocks         = 4
   refine_max_level   = 1
   block_nx1          = 64
   block_nx2          = 64
   domain_nx1         = 128
   domain_nx2         = 128
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   iprob=1
 /
  
 &paramlist
   slowsteps        = 10
   courantpar       = 1.d0
   typecourant      = 'maxsum'
 /
