 !$AMRVAC_DIR/setup.pl -d=2
 &filelist
   base_filename    = 'khi'
   typefilelog      = 'regression_test'
   autoconvert      = T
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)      = 0
   ditsave_log      = 10
 /

 &stoplist
   it_max = 100
 /

 &methodlist
   time_stepper = 'threestep'
   flux_scheme     = 20*'hll'
   limiter         = 20*'cada3'
 /

 &boundlist
   typeboundary_min1 = 4*'periodic'
   typeboundary_max1 = 4*'periodic'
   typeboundary_min2 = 4*'periodic'
   typeboundary_max2 = 4*'periodic'
 /

 &meshlist
   max_blocks         = 1
   refine_max_level   = 1
   block_nx1          = 64
   block_nx2          = 64
   domain_nx1         = 64
   domain_nx2         = 64
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   iprob=1
 /
  
 &paramlist
   slowsteps        = 10
   courantpar       = 1.d0
   typecourant      = 'maxsum'
 /
