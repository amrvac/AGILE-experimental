&filelist
  base_filename    = 'output/amr_test/cloud_crushing'
  autoconvert      = F
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
/

&savelist
  itsave(1,1)      = 0
  itsave(1,2)      = 0
  ditsave_log      = 20
  dtsave_dat       = 100
/

&stoplist
  it_max         = 50
/

&methodlist
  time_stepper     = 'threestep'
  flux_scheme      = 20*'tvdlf'
  limiter          = 20*'vanleer'
  phys             = 'hd'
/

&boundlist
  typeboundary_min1 = 5*'special'
  typeboundary_max1 = 5*'cont'
  typeboundary_min2 = 5*'noinflow'
  typeboundary_max2 = 5*'noinflow'
  typeboundary_min3 = 5*'noinflow'
  typeboundary_max3 = 5*'noinflow'
  specialboundary   = .true.
/

&meshlist
  max_blocks       = 2560
  refine_max_level = 2
  block_nx1        = 16
  block_nx2        = 16
  block_nx3        = 16
  domain_nx1       = 640
  domain_nx2       = 128
  domain_nx3       = 128

  xprobmin1         = 0.0d0
  xprobmax1         = 20.0d0
  xprobmin2         = -2.0d0
  xprobmax2         = 2.0d0
  xprobmin3         = -2.0d0
  xprobmax3         = 2.0d0
/

&hd_list
  hd_radiative_cooling = .true.
/

&rc_list
  coolcurve  = 'Colgan_DM'
  coolmethod = 'exact'
  Tfix       = .true.
/

&paramlist
  slowsteps         = 10
  courantpar        = 0.8d0
/