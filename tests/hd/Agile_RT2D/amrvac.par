!setup.pl -d=2

 &filelist
   base_filename      = 'output/rthd_2d'
   autoconvert      = .true.
   convert_type     = 'vtuBCCmpi'
   saveprim         = .true.
 /

 &savelist
   dtsave_log       = 1.d-3
   dtsave_dat       = 1.d-1
/

 &stoplist
   it_max              = 100
   time_max            = 2.d0
/

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme       = 20*'tvdlf'
   limiter    = 20*'minmod'
/

 &boundlist
  typeboundary_min1 = 4*'periodic'
  typeboundary_max1 = 4*'periodic'
  typeboundary_min2 = 'symm','symm','asymm','symm'
  typeboundary_max2 = 'symm','symm','asymm','symm'
/
 &meshlist
   refine_max_level= 1
   max_blocks      = 16384
   block_nx1       = 32
   block_nx2       = 32
   domain_nx1      = 4096
   domain_nx2      = 4096
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

 &hd_list
  hd_gravity = .false.
 /
