
 &filelist
   base_filename    = 'bw_3d'
   typefilelog='regression_test'
   autoconvert      = T
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   dtsave_log = 1.d-3

 /

 &stoplist
   time_max = 2.d-2
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   small_values_method = 'ignore'
   phys            = 'mhd'
 /

 &boundlist
   typeboundary_min1 = 8*'cont'
   typeboundary_max1 = 8*'cont'
   typeboundary_min2 = 8*'cont'
   typeboundary_max2 = 8*'cont'
   typeboundary_min3 = 8*'cont'
   typeboundary_max3 = 8*'cont'
 /

 &meshlist
   refine_max_level   = 1
   block_nx1          = 8
   block_nx2          = 8
   block_nx3          = 8
   domain_nx1         = 64
   domain_nx2         = 64
   domain_nx3         = 64
   xprobmin1       = 0.0d0
   xprobmax1       = 2.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 2.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 2.0d0
   iprob=1
 /
   max_blocks         = 4096

 &paramlist
   typecourant      = 'maxsum'
   courantpar       = 0.9d0
 /

 &phys_list
   gravity = .false.
 /
