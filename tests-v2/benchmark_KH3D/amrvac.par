 !$AMRVAC_DIR/setup.pl -d=3

 &filelist
   base_filename    = 'output/kh3d'
   autoconvert      = T
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)      = 0
   itsave(1,2)      = 0
!   itsave(1,3)      = 0
   ditsave_log      = 1
   ditsave_dat      = 1
   ditsave_slice    = 100
   nslices          = 3
   slicedir(1)      = 3
   slicecoord(1)    = 0.5d0
   slicedir(2)      = 2
   slicecoord(2)    = 0.5d0
   slicedir(3)      = 1
   slicecoord(3)    = 0.5d0
   
 /

 &stoplist
   it_max           = 100
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   small_values_method = 'ignore'
 !  phys                = 'hd'
 /

 &boundlist
   typeboundary_min1 = 5*'periodic'
   typeboundary_max1 = 5*'periodic'
   typeboundary_min2 = 5*'periodic'
   typeboundary_max2 = 5*'periodic'
   typeboundary_min3 = 5*'periodic'
   typeboundary_max3 = 5*'periodic'
 /

 &meshlist
   max_blocks         = 16384 !32768 !4096
   refine_max_level   = 1
!   max_blocks         = 4096
!   refine_max_level   = 1
   refine_criterion   = 1 !user-defined criterion only (in mod_usr)
   itfixgrid          = 0 
   block_nx1          = 4 !10 !16
   block_nx2          = 4 !10 !16
   block_nx3          = 4 !10 !16
   domain_nx1         = 16 !50 !64 !256
   domain_nx2         = 16 !50 !64 !256
   domain_nx3         = 16 !50 !64 !256
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
   iprob=1
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.7d0
   typecourant      = 'maxsum'
 /
