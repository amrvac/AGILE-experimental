
 &filelist
   base_filename    = 'output/kh3d'
   typefilelog      = 'regression_test'
   autoconvert      = F
   convert_type     = 'vtuBCCmpi'
   saveprim         = T
 /

 &savelist
   dtsave_log       = 1e10
   dtsave_dat       = 1e10
 /

 &stoplist
   time_max=0.1d0
 /

 &methodlist
   time_stepper    = 'threestep'
   flux_scheme     = 20*'tvdlf'
   limiter         = 20*'vanleer'
   small_values_method = 'ignore'
   phys                = 'hd'
 /

 &boundlist
   typeboundary_min1 = 5*'periodic'
   typeboundary_max1 = 5*'periodic'
   typeboundary_min2 = 5*'periodic'
   typeboundary_max2 = 5*'periodic'
   typeboundary_min3 = 5*'periodic'
   typeboundary_max3 = 5*'periodic'
 /

 &meshlist
   max_blocks         = 8
   refine_max_level   = 1
   block_nx1          = 16
   block_nx2          = 16
   block_nx3          = 16
   domain_nx1         = 32
   domain_nx2         = 32
   domain_nx3         = 32
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
   iprob=1
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.7d0
   typecourant      = 'maxsum'
 /
