F90=mpifort
FFLAGS = -c

HDF5DIR=${HOME}/miniconda3/envs/gmunu
HDF5INCS = -I${HDF5DIR}/include
HDF5LIBS = -L${HDF5DIR}/lib -lhdf5hl_fortran -lhdf5_hl -lhdf5_fortran -lhdf5

F90FLAGS = -ffree-form -O3 -Wall -Wno-unused-dummy-argument	\
-Wno-unused-function -Wno-unused -Wno-uninitialized -Wno-zerotrip  \
${HDF5INCS} ${HDF5LIBS} \
-fbounds-check -fbacktrace

LINK= $(F90)  $(F90FLAGS)
